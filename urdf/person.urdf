<robot name="person">
  <material name="red">
    <color rgba="0 0 0.8 1"/>
  </material>
  <link name="body">
    <visual>
      <origin xyz="0 0 0.7175" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.239" length="1.435"/>
      </geometry>
      <material name="red"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.7175" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.239" length="1.435"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="49.077"/>
      <origin xyz="0 0 0.7175"/>
      <inertia ixx="8.422" ixy="0.0" ixz="0.0" iyy="8.422" iyz="0.0" izz="1.402"/>
    </inertial>
  </link>
  <link name="head">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.12" length="0.239"/>
      </geometry>
      <material name="red"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.12" length="0.239"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="8.174"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
    </inertial>
  </link>
  <joint name="joint" type="fixed">
    <parent link="body"/>
    <child link="head"/>
    <origin xyz="0 0 1.5545" rpy="0 0 0"/>
  </joint>

  <gazebo>
    <plugin name="object_controller" filename="libgazebo_ros_planar_move.so">
      <commandTopic>cmd_vel</commandTopic>
      <odometryTopic>odom</odometryTopic>
      <odometryFrame>odom</odometryFrame>
      <odometryRate>20.0</odometryRate>
      <robotBaseFrame>base_footprint</robotBaseFrame>
    </plugin>
  </gazebo>
</robot>
