<?xml version="1.0"?>
<robot name = "room">


	<link name = "ground">
		<visual>
			<origin xyz = "0 0 0" rpy ="0 0 0"/>
			<geometry>
				<box size = "20 20 0.5"/>
			</geometry>
		</visual>

		<collision>
			<origin xyz = "0 0 0" rpy ="0 0 0"/>
			<geometry>
				<box size = "20 20 0.5"/>
			</geometry>
		</collision>
	</link>

	<link name = "front_wall">
		<visual>
			<origin xyz = "5 0 1.5" rpy ="0 0 0"/>
			<geometry>
				<box size = "0.5 10 3"/>
			</geometry>
		</visual>

		<collision>
			<origin xyz = "5 0 1.5" rpy ="0 0 0"/>
			<geometry>
				<box size = "0.5 10 3"/>
			</geometry>
		</collision>
	</link>

	<link name = "right_wall">
		<visual>
			<origin xyz = "0 5 1.5" rpy ="0 0 0"/>
			<geometry>
				<box size = "10 0.5 3"/>
			</geometry>
		</visual>

		<collision>
			<origin xyz = "0 5 1.5" rpy ="0 0 0"/>
			<geometry>
				<box size = "10 0.5 3"/>
			</geometry>
		</collision>
	</link>

	<link name = "back_wall">
		<visual>
			<origin xyz = "-5 0 1.5" rpy ="0 0 0"/>
			<geometry>
				<box size = "0.5 10 3"/>
			</geometry>
		</visual>

		<collision>
			<origin xyz = "-5 0 1.5" rpy ="0 0 0"/>
			<geometry>
				<box size = "0.5 10 3"/>
			</geometry>
		</collision>
	</link>

	<link name = "left_wall">
		<visual>
			<origin xyz = "0 -5 1.5" rpy ="0 0 0"/>
			<geometry>
				<box size = "10 0.5 3"/>
			</geometry>
		</visual>

		<collision>
			<origin xyz = "0 -5 1.5" rpy ="0 0 0"/>
			<geometry>
				<box size = "10 0.5 3"/>
			</geometry>
		</collision>
	</link>

	<joint name="front_joint" type="fixed">
		<parent link="ground"/>
		<child link="front_wall"/>
		<origin xyz = "5 0 1.5" rpy ="0 0 0"/>
	</joint>

	<joint name="right_joint" type="fixed">
		<parent link="ground"/>
		<child link="right_wall"/>
		<origin xyz = "0 5 1.5" rpy ="0 0 0"/>
	</joint>

	<joint name="back_joint" type="fixed">
		<parent link="ground"/>
		<child link="back_wall"/>
		<origin xyz = "-5 0 1.5" rpy ="0 0 0"/>
	</joint>

	<joint name="left_joint" type="fixed">
		<parent link="ground"/>
		<child link="left_wall"/>
		<origin xyz = "0 -5 1.5" rpy ="0 0 0"/>
	</joint>

	<gazebo>
			<static>true</static>
	</gazebo>

</robot>
