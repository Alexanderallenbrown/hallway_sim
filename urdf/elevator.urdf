<?xml version = "1.0"?>
<robot name = "elevator">

  <link name = "floor">
    <visual>
      <origin xyz = "0 0 -0.25" rpy = "0 0 0"/>
      <geometry>
        <box size = "3 2.75 0.5"/>
      </geometry>
    </visual>

    <collision>
      <origin xyz = "0 0 -0.25" rpy = "0 0 0"/>
      <geometry>
        <box size = "3 2.75 0.5"/>
      </geometry>
    </collision>

    <inertial>
      <mass value = "50"/>
      <origin xyz = "0 0 -0.25"/>
      <inertia ixx = '50.0' ixy = "0.0" ixz = "0.0" iyy = "50.0" iyz = "0.0" izz = "50.0"/>
    </inertial>
  </link>

  <link name = "front_wall_exterior">
    <visual>
      <origin xyz = "-0.75 1.3125 1.5" rpy = "0 0 0"/>
      <geometry>
        <box size = "1.5 0.125 3"/>
      </geometry>
    </visual>

    <collision>
      <origin xyz = "-0.75 1.3125 1.5" rpy = "0 0 0"/>
      <geometry>
        <box size = "1.5 0.125 3"/>
      </geometry>
    </collision>

    <inertial>
      <mass value = "50"/>
      <origin xyz = "-0.75 1.3125 1.5"/>
      <inertia ixx = "50.0" ixy = "0.0" ixz = "0.0" iyy = "50.0" iyz = "0.0" izz = "50.0"/>
    </inertial>
  </link>

  <link name = "front_wall_interior">
    <visual>
      <origin xyz = "-0.75 0.9375 1.5" rpy = "0 0 0"/>
      <geometry>
        <box size = "1.5 0.125 3"/>
      </geometry>
    </visual>

    <collision>
      <origin xyz = "-0.75 0.9375 1.5" rpy = "0 0 0"/>
      <geometry>
        <box size = "1.5 0.125 3"/>
      </geometry>
    </collision>

    <inertial>
      <mass value = "50"/>
      <origin xyz = "-0.75 0.9375 1.5"/>
      <inertia ixx = "50.0" ixy = "0.0" ixz = "0.0" iyy = "50.0" iyz = "0.0" izz = "50.0"/>
    </inertial>
  </link>

  <link name = "back_wall">
    <visual>
      <origin xyz = "0 -1.25 1.5" rpy = "0 0 0"/>
      <geometry>
        <box size = "3 0.25 3"/>
      </geometry>
    </visual>

    <collision>
      <origin xyz = "0 -1.25 1.5" rpy = "0 0 0"/>
      <geometry>
        <box size = "3 0.25 3"/>
      </geometry>
    </collision>

    <inertial>
      <mass value = "50"/>
      <origin xyz = "0 -1.25 1.5"/>
      <inertia ixx = "50.0" ixy = "0.0" ixz = "0.0" iyy = "50.0" iyz = "0.0" izz = "50.0"/>
    </inertial>
  </link>

  <link name = "left_wall">
    <visual>
      <origin xyz = "1.375 0 1.5" rpy = "0 0 0"/>
      <geometry>
        <box size = "0.25 2.75 3"/>
      </geometry>
    </visual>

    <collision>
      <origin xyz = "1.375 0 1.5" rpy = "0 0 0"/>
      <geometry>
        <box size = "0.25 2.75 3"/>
      </geometry>
    </collision>

    <inertial>
      <mass value = "50"/>
      <origin xyz = "1.375 0 1.5"/>
      <inertia ixx = "50.0" ixy = "0.0" ixz = "0.0" iyy = "50.0" iyz = "0.0" izz = "50.0"/>
    </inertial>
  </link>

  <link name = "right_wall">
    <visual>
      <origin xyz = "-1.375 0 1.5" rpy = "0 0 0"/>
      <geometry>
        <box size = "0.25 2.75 3"/>
      </geometry>
    </visual>

    <collision>
      <origin xyz = "-1.375 0 1.5" rpy = "0 0 0"/>
      <geometry>
        <box size = "0.25 2.75 3"/>
      </geometry>
    </collision>

    <inertial>
      <mass value = "50"/>
      <origin xyz = "-1.375 0 1.5"/>
      <inertia ixx = "50.0" ixy = "0.0" ixz = "0.0" iyy = "50.0" iyz = "0.0" izz = "50.0"/>
    </inertial>
  </link>

  <link name = "door">
    <visual>
      <origin xyz = "0 1.125 1.5" rpy = "0 0 0"/>
      <geometry>
        <box size = "1.25 0.25 3"/>
      </geometry>
    </visual>

    <collision>
      <origin xyz = "0 1.125 1.5" rpy = "0 0 0"/>
      <geometry>
        <box size = "1.25 0.25 3"/>
      </geometry>
    </collision>

    <inertial>
      <mass value = "50"/>
      <origin xyz = "0 1.125 1.5"/>
      <inertia ixx = "50.0" ixy = "0.0" ixz = "0.0" iyy = "50.0" iyz = "0.0" izz = "50.0"/>
    </inertial>
  </link>

  <joint name = "front_exterior_ground_joint" type = "fixed">
    <parent link = "floor"/>
    <child link = "front_wall_exterior"/>
    <origin xyz = "0 0 0" rpy = "0 0 0"/>
  </joint>

  <joint name = "front_interior_ground_joint" type = "fixed">
    <parent link = "floor"/>
    <child link = "front_wall_interior"/>
    <origin xyz = "0 0 0" rpy = "0 0 0"/>
  </joint>

  <joint name = "back_ground_joint" type = "fixed">
    <parent link = "floor"/>
    <child link = "back_wall"/>
    <origin xyz = "0 0 0" rpy = "0 0 0"/>
  </joint>

  <joint name = "left_ground_joint" type = "fixed">
    <parent link = "floor"/>
    <child link = "left_wall"/>
    <origin xyz = "0 0 0" rpy = "0 0 0"/>
  </joint>

  <joint name = "right_ground_joint" type = "fixed">
    <parent link = "floor"/>
    <child link = "right_wall"/>
    <origin xyz = "0 0 0" rpy = "0 0 0"/>
  </joint>

  <joint name = "door_ground_joint" type = "prismatic">
    <parent link = "floor"/>
    <child link = "door"/>
    <axis xyz = "1 0 0"/>
    <limit effort = "1000.0" lower = "-0.625" upper = "0.625" velocity = "0.1"/>
    <origin xyz = "0 0 0" rpy = "0 0 0"/>
  </joint>

  <gazebo>
    <static>false</static>
  </gazebo>

  <!--        Gazebo Plug       -->
  <gazebo>
    <plugin name = "gazebo_ros_control" filename = "libgazebo_ros_control.so">
      <robotNamespace>/elevator</robotNamespace>
    </plugin>
  </gazebo>

  <transmission name = "simple_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name = "door_ground_joint">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
    </joint>
    <actuator name = "driver">
      <mechanicalReduction>1</mechanicalReduction>
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
    </actuator>
  </transmission>


</robot>