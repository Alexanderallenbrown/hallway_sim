<?xml version = "1.0"?>
<robot name = "elevator">

	

	<link name = "front_wall_exterior">
		<visual>
			<origin xyz = "0 0 1.5" rpy = "0 0 0"/>
			<geometry>
				<box size = "1.5 0.125 3"/>
			</geometry>
		</visual>

		<collision>
			<origin xyz = "-0.75 1.3125 1.5" rpy = "0 0 0"/>
			<geometry>
				<box size = "1.5 0.125 3"/>
			</geometry>
		</collision>
	</link>

	

	<link name = "door">
		<visual>
			<origin xyz = "0 1.125 1.5" rpy = "0 0 0"/>
			<geometry>
				<box size = "1.25 0.25 3"/>
			</geometry>
		</visual>

		<collision>
			<origin xyz = "0 1.125 1.5" rpy = "0 0 0"/>
			<geometry>
				<box size = "1.25 0.25 3"/>
			</geometry>
		</collision>
	</link>

	

	<joint name = "door_joint" type = "prismatic">
		<parent link = "front_wall_exterior"/>
		<child link = "door"/>
		<origin xyz = "0 -0.125 1.5" rpy = "0 0 0"/>
		<limit effort = "1000.0" lower = "-0.625" upper = "0.625" velocity = "0.1"/>
		<axis xyz = "1 0 0"/>
	</joint>

	<gazebo>
		<static>false</static>
	</gazebo>

</robot>

